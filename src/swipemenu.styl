swipemenuConfig = {
	w: 280px
	bg: white
	zIndex: 6
}

.swipemenu
	display flex
	flex-direction column
	flex-wrap nowrap
	background-color: swipemenuConfig.bg
	z-index: swipemenuConfig.zIndex
	width: swipemenuConfig.w
	height 100%
	max-height 100%
	position fixed
	top 0
	left 0
	right auto
	box-sizing border-box
	overflow hidden
	overflow-y auto
	will-change: transform
	transform: translateX(-(swipemenuConfig.w))
	transform-style preserve-3d
	transition-duration 0.5s
	transition-timing-function cubic-bezier(0.4, 0, 0.2, 1)
	transition-property transform

.swipemenu--open
	transform translateX(0)

.swipemenu--dragging
	transition none
