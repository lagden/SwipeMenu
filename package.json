{
  "name": "swipe-menu",
  "version": "2.0.0",
  "description": "It's a lightweight JavaScript library for swiping off-canvas menus",
  "main": "dist/swipemenu.js",
  "jsnext:main": "src/swipemenu.js",
  "scripts": {
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "rollup": "BABEL_ENV=rollup rollup -c -o dist/swipemenu.js",
    "styl": "stylus src/swipemenu.styl -o dist",
    "pretty": "esformatter -i --indent.value=\"\t\" 'dist/*.js'",
    "build": "npm test && npm run styl && npm run rollup && npm run pretty",
    "prepublish": "rm -rf dist && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipoliveira/SwipeMenu.git"
  },
  "keywords": [
    "swipe",
    "menu",
    "canvas"
  ],
  "author": "Felipe Oliveira <felipe.o.silva18@gmail.com>",
  "maintainers": [
    "Thiago Lagden <lagden@lagden.in>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/felipoliveira/SwipeMenu/issues"
  },
  "homepage": "https://github.com/felipoliveira/SwipeMenu#readme",
  "devDependencies": {
    "ava": "0.15.1",
    "babel": "6.5.2",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-es2015-rollup": "1.1.1",
    "babel-register": "6.8.0",
    "coveralls": "2.11.9",
    "esformatter": "0.9.3",
    "jsdom": "9.2.0",
    "nyc": "6.4.4",
    "rollup": "0.26.2",
    "rollup-plugin-babel": "2.4.0",
    "xo": "0.15.0"
  },
  "xo": {
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "navigator",
      "CustomEvent"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/index.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "failFast": true,
    "cacheEnabled": false
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ]
}
